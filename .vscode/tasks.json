{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Windows Build",
            "command": "cd build ; cmake -G 'MinGW Makefiles' -D CMAKE_EXPORT_COMPILE_COMMANDS=1 .. ; mingw32-make ; cd ..",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Windows clean",
            "command": "cd build ; mingw32-make clean; cd ..",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}